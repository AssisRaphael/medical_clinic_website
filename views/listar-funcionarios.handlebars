<div style="margin-bottom: 0px;border: 40px solid rgba(0, 0, 0, 0.9);"></div>

<div class="principal">
    <h1>Lista de Funcionários</h1>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Código</th>
                <th scope="col">Nome</th>
                <th scope="col">Email</th>
                <th scope="col">Telefone</th>
                <th scope="col">CEP</th>
                <th scope="col">Logradouro</th>
                <th scope="col">Bairro</th>
                <th scope="col">Cidade</th>
                <th scope="col">Estado</th>
            </tr>
        </thead>
        <tbody>
            {{#each funcionarios}}
            <tr>
                <td>{{dataValues.codigo}}</td>
                <td>{{dataValues.nome}}</td>
                <td>{{dataValues.email}}</td>
                <td>{{dataValues.telefone}}</td>
                <td>{{dataValues.cep}}</td>
                <td>{{dataValues.logradouro}}</td>
                <td>{{dataValues.bairro}}</td>
                <td>{{dataValues.cidade}}</td>
                <td>{{dataValues.estado}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <h1>Lista de Médicos</h1>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Código</th>
                <th scope="col">Nome</th>
                <th scope="col">Especialidade</th>
                <th scope="col">CRM</th>
                <th scope="col">Email</th>
                <th scope="col">Telefone</th>
                <th scope="col">CEP</th>
                <th scope="col">Logradouro</th>
                <th scope="col">Bairro</th>
                <th scope="col">Cidade</th>
                <th scope="col">Estado</th>
            </tr>
        </thead>
        <tbody>
            {{#each medicos}}
            <tr>
                <td>{{dataValues.codigo}}</td>
                <td>{{dataValues.nome}}</td>
                <td>{{dataValues.especialidade}}</td>
                <td>{{dataValues.crm}}</td>
                <td>{{dataValues.email}}</td>
                <td>{{dataValues.telefone}}</td>
                <td>{{dataValues.cep}}</td>
                <td>{{dataValues.logradouro}}</td>
                <td>{{dataValues.bairro}}</td>
                <td>{{dataValues.cidade}}</td>
                <td>{{dataValues.estado}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <a href="\admin"><button type="button" class="btn btn-dark">Voltar</button></a>
</div>

<style>
    .principal {
        max-width: 1400px;
        min-height: 515px;
        margin-left: auto;
        margin-right: auto;
        padding-top: 25px;
        padding-bottom: 25px;
        text-align: center;
    }

    .principal h1 {
        margin-bottom: 25px;
    }

    .horario {
        display: inline;
    }
</style>